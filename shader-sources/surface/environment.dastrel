uniform(set=0, binding=0) ObjectState
{
    modelMatrix: float4x4;
    inverseModelMatrix: float4x4;
    color: float4;
}

uniform(set=1, binding=0) CameraObjectState
{
    inverseViewMatrix: float4x4;
    viewMatrix: float4x4;
}

uniform(set=1, binding=1) CameraState
{
    projectionMatrix: float4x4;
    currentTime: float;
}

uniform(set=2, binding=0) GlobalLightingState
{
    // Hemisphere lighting
    groundLighting: float4;
    skyLighting: float4;
    sunDirection: float3;

    // Normal lights
    numberOfLights: int;
    lightSources: LightSource[16];
}

struct LightSource
{
    position: float4;
    intensity: float4;
    spotDirection: float3;
    innerCosCutoff: float;
    outerCosCutoff: float;
    spotExponent: float;
    radius: float;
}

function transformNormalToView(normal: float3) -> float3
{
    using CameraObjectState;
    using ObjectState;

    return ((float4(normal, 0.0f) * inverseModelMatrix) * inverseViewMatrix).xyz;
}

function transformPositionToView(position: float3) -> float4
{
    return transformVector4ToView(float4(position, 1.0f));
}

function transformVector4ToView(position: float4) -> float4
{
    using CameraObjectState;
    using ObjectState;

    return viewMatrix * (modelMatrix * position);
}

function transformPositionToWorld(position: float3) -> float4
{
    using ObjectState;

    return modelMatrix * float4(position, 1.0f);
}

function transformVectorToWorld(position: float3) -> float3
{
    using ObjectState;

    return (modelMatrix * float4(position, 0.0f)).xyz;
}

function cameraWorldPosition() -> float3
{
    using CameraObjectState;

    return inverseViewMatrix[3].xyz;
}

function fresnelSchlick(F0: float3, cosTheta: float) -> float3
{
    let powFactor = 1.0f - cosTheta;
    let powFactor2 = powFactor * powFactor;
    let powFactor4 = powFactor2 * powFactor2;
    let powValue = powFactor4 * powFactor;

    return F0 + (float3(1.0f, 1.0f, 1.0f) - F0) * powValue;
}

function fresnelSchlick(F0: float, cosTheta: float) -> float
{
    let powFactor = 1.0f - cosTheta;
    let powFactor2 = powFactor * powFactor;
    let powFactor4 = powFactor2 * powFactor2;
    let powValue = powFactor4 * powFactor;

    return F0 + (1.0f - F0) * powValue;
}
