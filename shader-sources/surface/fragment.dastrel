semantic FragmentInput {
    in(0) position: float3;
    in(1) texcoord: float2;
    in(2) color: float4;
    in(3) normal: float3;
    in(4) tangent: float3;
    in(5) bitangent: float3;
}

semantic FragmentOutput {
    out(0) color: float4;
}

uniform(set = 4, binding = 0) albedoSampler : sampler;
uniform(set = 4, binding = 1) normalSampler : sampler;
uniform(set = 4, binding = 1) displacementSampler : sampler;
