import environment;
import fragment;

code_block(fragment) main
{
    let left = mainSampler.sample(mainTexture, FragmentInput.texcoord*float2(0.5f, 1.0f));
    let right = mainSampler.sample(mainTexture, FragmentInput.texcoord*float2(0.5f, 1.0f) + float2(0.5f, 0.0f));

    FragmentOutput.color = float4(left.r, right.gb, 1.0f);
}
