{
    "states" : {
        "forward.common" : {
            "abstract" : true,
            "shader-signature" : "ForwardRenderer",
            "render-target-formats" : ["B8G8R8A8_UNORM_SRGB"],
            "depth-stencil-format" : "D24_UNORM_S8_UINT",
            "inherit-from" : "settings.rendering.sample-description",
            "vertex-layout" : "GenericVertex",

            "cull-mode" : "back",
            "front-face" : "counter-clockwise",

            "blend-state" : [{
                "render-target-mask" : -1,
                "enabled" : true,
                "source-factor" : "source-alpha",
                "dest-factor" : "inverted-source-alpha",
                "operation" : "add"
            }],

            "depth-state" : {
                "enabled" : true,
                "write-mask" : true,
                "function" : "greater"
            }
        },

        "forward.surface.color" : {
            "inherit-from" : "forward.common",
            "shader" : "Surface.Color",
            "primitive-type" : "triangles"
        },

        "forward.surface.albedo-texture" : {
            "inherit-from" : "forward.common",
            "shader" : "Surface.AlbedoTexture",
            "primitive-type" : "triangles"
        },

        "forward.surface.albedo-fresnel-texture" : {
            "inherit-from" : "forward.common",
            "shader" : "Surface.AlbedoFresnelTexture",
            "primitive-type" : "triangles"
        },

        "forward.surface.albedo-normal-texture" : {
            "inherit-from" : "forward.common",
            "shader" : "Surface.AlbedoNormalTexture",
            "primitive-type" : "triangles"
        },

        "forward.surface.albedo-normal-fresnel-texture" : {
            "inherit-from" : "forward.common",
            "shader" : "Surface.AlbedoNormalFresnelTexture",
            "primitive-type" : "triangles"
        },

        "forward.sky" : {
            "inherit-from" : "forward.common",
            "shader" : "Surface.Sky",
            "primitive-type" : "triangles"
        },

        "forward.water.color" : {
            "inherit-from" : "forward.common",
            "cull-mode" : "none",
            "shader" : "Surface.WaterColor",
            "primitive-type" : "triangles"
        },

        "forward.water.sky" : {
            "inherit-from" : "forward.common",
            "cull-mode" : "none",
            "shader" : "Surface.WaterSky",
            "primitive-type" : "triangles"
        }
    }
}
